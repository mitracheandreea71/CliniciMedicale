<Window x:Class="Project.Windows.InregistrareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.Windows"
        mc:Ignorable="d"
        Title="InregistrareWindow" Height="700" Width="1200">
    <Grid x:Name="LogoBttn" Background="#FFD3D3D3">


        <Image Margin="27,92,494,-2"/>
        <Image Source="/Images/medical.png" 
              HorizontalAlignment="Left" 
              VerticalAlignment="Top" 
              Margin="0,120,0,0" 
              Height="580" 
              Width="705" 
              Stretch="Uniform" />


        <Button x:Name="MainWindowBttn" HorizontalAlignment="Left" Margin="47,26,0,0" VerticalAlignment="Top" Background="Transparent" Width="91" Height="89" Focusable="True">
            <Button.Content>
                <Image x:Name="MainWindowImg" Source="/Images/logo.png" Stretch="Fill"/>
            </Button.Content>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                   BorderBrush="{TemplateBinding BorderBrush}"
                   BorderThickness="{TemplateBinding BorderThickness}"
                   CornerRadius="50">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
            </Button.Style>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="148,41,0,0" TextWrapping="Wrap" Text="VitaNova" FontSize="20"  VerticalAlignment="Top" FontWeight="SemiBold" Height="23" Width="85" Foreground="Black" RenderTransformOrigin="0.367,0.508"/>
        <TextBlock HorizontalAlignment="Left" Margin="159,70,0,0" TextWrapping="Wrap" Text="Contul tau " VerticalAlignment="Top" Height="24" Width="63"/>
        <Border Background="White"
               BorderBrush="#D3D3D3"
               BorderThickness="1"
               CornerRadius="10"
               Width="436"
               Height="632"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="672,0,0,0">
            <Grid>
                <TextBlock Text="Inregistreaza Cont"
                          FontSize="40"
                          FontWeight="Bold"
                          FontFamily="Times New Roman"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Margin="0,41,0,0"
                          Foreground="Black" RenderTransformOrigin="0.461,1.173"/>

                <TextBlock Text="Nume"
                  FontSize="14"
                  FontWeight="SemiBold"
                  Foreground="Gray"
                  Margin="73,122,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top" RenderTransformOrigin="0.602,1.557" Width="60"/>

                <TextBox x:Name="NumeBox" FontSize="14"
                        Margin="5,146,233,0"
                        Height="34"
                        VerticalAlignment="Top"
                        Text="{Binding Nume, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White"
                                       BorderBrush="#D3D3D3"
                                       BorderThickness="1"
                                       CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                 Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="Prenume"
                  FontSize="14"
                  FontWeight="SemiBold"
                  Foreground="Gray"
                  Margin="303,122,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"/>

                <PasswordBox x:Name="PasswordBox"
                            FontSize="14"
                            Margin="233,222,0,0"
                            Height="34"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left"
                            Width="196"
                            PasswordChanged="PasswordBox_PasswordChanged">

                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="White"
                                               BorderBrush="#D3D3D3"
                                               BorderThickness="1"
                                               CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                 Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <TextBox x:Name="PasswordTextBox"
        FontSize="14"
        Margin="233,222,0,0"
        Height="34"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Width="366"
        Visibility="Collapsed"
        Text="{Binding ElementName=PasswordBox, Path=Password}"
        IsReadOnly="True">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White"
                               BorderBrush="#D3D3D3"
                               BorderThickness="1"
                               CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                         Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button x:Name="InregistrareCont_Bttn" Content="Inregistrare cont"
                   Height="55"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="White"
                   Background="DarkRed"
                   BorderBrush="Black"
                   BorderThickness="1"
                   Margin="34,565,34,0"
                   VerticalAlignment="Top"
                   Command="{Binding InregistreazaCont}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}"
                                           BorderBrush="{TemplateBinding BorderBrush}"
                                           BorderThickness="1"
                                           CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Text="Email"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Margin="73,198,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" RenderTransformOrigin="0.602,1.557" Width="60"/>
                <TextBox x:Name="EmailBox_Copy" FontSize="14"
                    Margin="5,222,233,0"
                    Height="34"
                    VerticalAlignment="Top"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                        <Border Background="White"
                                            BorderBrush="#D3D3D3"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="Parola"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Margin="303,198,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"/>
                <Button Content="👁"
                    Width="23"
                    Height="21"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,227,10,0"
                    Click="TogglePasswordVisibility_Click"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="14"
                    FontWeight="Bold" RenderTransformOrigin="-0.065,0.819" />
                <TextBox x:Name="PrenumeBox" FontSize="14"
                    Margin="233,146,5,0"
                    Height="34"
                    VerticalAlignment="Top"
                    Text="{Binding Prenume, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                        <Border Background="White"
                                            BorderBrush="#D3D3D3"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="Judet"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Margin="0,273,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" RenderTransformOrigin="0.602,1.557" Width="42"/>
                <TextBox x:Name="JudetBox" FontSize="14"
                    Margin="116,297,116,0"
                    Height="34"
                    VerticalAlignment="Top"
                    Text="{Binding Judet, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                        <Border Background="White"
                                            BorderBrush="#D3D3D3"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="Adresa"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Margin="0,351,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" RenderTransformOrigin="0.602,1.557" Width="50"/>
                <TextBox x:Name="AdresaBox" FontSize="14"
                    Margin="8,375,8,0"
                    Height="34"
                    VerticalAlignment="Top"
                    Text="{Binding Adresa, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                        <Border Background="White"
                                            BorderBrush="#D3D3D3"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBox x:Name="CNPBox" FontSize="14"
                    Margin="6,460,10,0"
                    Height="34"
                    VerticalAlignment="Top"
                    Text="{Binding CNP, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                        <Border Background="White"
                                            BorderBrush="#D3D3D3"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                Margin="5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock Text="CNP"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Gray"
                    Margin="0,436,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" RenderTransformOrigin="0.602,1.557" Width="31"/>


            </Grid>
        </Border>
        <CheckBox Content="Sunt de acord cu prelucrarea datelor&#xD;&#xA; personale" HorizontalAlignment="Left" IsChecked="{Binding Acord, Mode=TwoWay}" Margin="688,537,0,0" VerticalAlignment="Top" Height="41" Width="404" FontSize="18" FontFamily="Arial Black"/>
    </Grid>
</Window>
